h1= @question.title
p= @question.body

-if current_user&.is_author?(@question)
  =link_to 'Delete question', question_path(@question), method: :delete

=render 'shared/errors', resource: @question.answers.last
=form_with model: [@question, Answer], url: question_answers_path(@question), local: true do |f|
  =f.label :body, 'Answer'
  =f.text_area :body
  =f.submit 'To answer'

h2= 'Answers'
=render 'answers', resource: @question
